/* --- Status Indicators --- */
.status-indicator {
    border-radius: 50%;
    width: 12px;
    height: 12px;
    margin: 4px;
}

.status-indicator.online {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
        stop:0 #10b981, 
        stop:1 #059669);
}

.status-indicator.offline {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
        stop:0 #6b7280, 
        stop:1 #4b5563);
}

.status-indicator.warning {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, 
        stop:0 #f59e0b, 
        stop:1 #d97706);
}

